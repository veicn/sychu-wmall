<view class="container"><view class="address-box"><view class="add-address" hidden="{{wardrobeInfo}}"><view class="title" bindtap="addAddress">选择配衣间</view></view><view class="show-address" hidden="{{!wardrobeInfo}}"><view class="name-tel">{{wardrobeInfo.name}} {{wardrobeInfo.startTime}}-{{wardrobeInfo.endTime}}</view><view class="addr-text">{{wardrobeInfo.address}}</view></view></view><view class="peisong-way"><view class="row-box"><view class="row-label">预约日期</view><picker bindchange="bindReserveDateChange" value="{{reserveDateIndex}}" range="{{reserveDateList}}" range-key="{{'reserveDateText'}}"><view class="right-text">{{reserveDateText}}</view></picker></view><view class="row-box"><view class="row-label">开始时间</view><picker mode="multiSelector" bindchange="bindStartTimeChange" value="{{reserveTimeStartIndex}}" range="{{reserveTimeStartList}}"><view class="right-text">{{reserveTimeStartValue}}</view></picker></view><view class="row-box"><view class="row-label">结束时间</view><picker mode="multiSelector" bindchange="bindEndTimeChange" value="{{reserveTimeEndIndex}}" range="{{reserveTimeEndList}}"><view class="right-text">{{reserveTimeEndValue}}</view></picker></view></view><view class="goods-list"><view class="list-title">商品列表</view><view class="a-goods" wx:for-items="{{goodsList}}" wx:key="{{index}}"><view class="img-box"><image src="{{item.pic}}" class="img" mode="aspectFill" lazy-load="true"></image></view><view class="text-box"><view class="arow arow01"><view class="goods-name">{{item.name}}</view><view class="goods-price">¥ {{item.price}}</view></view><view class="arow"><view class="goods-label">{{item.label}}</view><view class="goods-num">x {{item.number}}</view></view></view></view></view><view class="goods-info"><view class="row-box"><view class="row-label">商品金额</view><view class="right-text">¥ {{allGoodsPrice}}</view></view></view><view class="jiesuan-box"><view class="left-price"><view class="total">合计：¥ {{allGoodsPrice}}</view></view><button class="to-pay-btn" bindtap="createOrder">提交订单</button></view></view>