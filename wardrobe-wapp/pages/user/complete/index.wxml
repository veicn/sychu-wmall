<view class="page">
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{showTopTips}}</view>

        <view class="weui-cells__tips">欢迎来到闪衣橱</view>
        <view class="weui-cells__tips">请完善以下信息以便为您选出更满意的衣服：</view>

        <view class="weui-cells__title">基本信息</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">生日</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{birthday}}" start="{{today100}}" end="{{today}}" bindchange="bindDateChange">
                        <view class="weui-input">{{birthday}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">尺码偏好</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindSizeChange" value="{{sizeIndex}}" range="{{userSizeList}}" range-key="{{'dictValue'}}">
                        <view class="weui-select weui-select_in-select-after">{{userSizeList[sizeIndex].dictValue}}</view>
                    </picker>
                </view>
            </view>
        </view>

        <view class="weui-cells__title">手机验证</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号</view>
                </view>
                <view class="weui-cell__bd">
                    <input type="number" class="weui-input" placeholder="请输入手机号" value="{{mobile}}"
                           bindinput="bindMobileBlur" />
                </view>
                <view class="weui-cell__ft">
                    <view class="weui-vcode-btn" bindtap="sendSMSCode">{{smsText}}</view>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">验证码</view>
                </view>
                <view class="weui-cell__bd">
                    <input type="text" class="weui-input" placeholder="请输入验证码" value="{{code}}"
                           bindinput="bindCodeBlur"/>
                </view>
            </view>
        </view>

        <view class="weui-cells__title">邀请码</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">邀请码</view>
                </view>
                <view class="weui-cell__bd">
                    <input type="text" class="weui-input" placeholder="请输入邀请码(选填)" value="{{inviteCode}}"
                           bindinput="bindInviteCodeBlur"/>
                </view>
            </view>
        </view>

        <checkbox-group bindchange="bindAgreeChange">
            <label class="weui-agree">
                <view class="weui-agree__text">
                    阅读并同意<navigator url="/pages/user/protocols/user" class="weui-agree__link">《衣否用户协议》</navigator>
                </view>
            </label>
        </checkbox-group>


        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="userComplete">进入闪衣橱</button>
        </view>
    </view>
</view>
