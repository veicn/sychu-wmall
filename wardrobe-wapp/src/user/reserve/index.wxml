<view class="container">
    <view class="no-order" hidden="{{hasWardrobeInfo}}">
        <image src="/images/no-order.png" class="no-order-img"></image>
        <view class="text">暂无预约订单</view>
    </view>
    <view class="order-detail" hidden="{{!hasWardrobeInfo}}">
        <view class="address-box">
            <view class="show-address">
                <view class="name-tel">{{wardrobeInfo.sdName}}</view>
                <view class="addr-text">{{wardrobeInfo.address}}</view>
            </view>
        </view>
        <view class="peisong-way">
            <view class="row-box">
                <view class="row-label">预约日期</view>
                <view class="right-text">{{wardrobeInfo.resDate}}</view>
            </view>
            <view class="row-box">
                <view class="row-label">预约时间</view>
                <view class="right-text">{{wardrobeInfo.resStartTime}}-{{wardrobeInfo.resEndTime}}</view>
            </view>
            <button class="to-pay-btn" bindtap="scanOrder">扫码开门</button>
        </view>
        <view class="peisong-way">
            <view class="row-box">
                <view class="row-label">{{wardrobeInfo.sdcName}}</view>
                <view class="right-text" bindtap="openLock" data-id="{{wardrobeInfo.dcid}}">开锁</view>
            </view>
        </view>
        <view class="goods-list">
            <view class="list-title">商品列表</view>
            <view class="a-goods" wx:for-items="{{goodsList}}" wx:key="{{index}}">
                <view class="img-box">
                    <image src="{{item.resItemImg}}" class="img" mode="aspectFill" lazy-load="true"></image>
                </view>
                <view class="text-box">
                    <view class="arow arow01">
                        <view class="goods-name">{{item.resItemName}}</view>
                        <view class="goods-price">¥ {{item.resItemPrice}}</view>
                    </view>
                    <view class="arow">
                        <view class="goods-label">颜色：{{item.resItemColor}}、尺码：{{item.resItemSize}}</view>
                        <view class="goods-num">x {{item.resItemCount}}</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="goods-info">
            <view class="row-box">
                <view class="row-label">商品金额</view>
                <view class="right-text">¥ {{sumPrice}}</view>
            </view>
        </view>
        <view class="jiesuan-box">
            <button class="to-leave-btn" bindtap="cancelOrder">取消订单</button>
           <!--  <button class="to-leave-btn" bindtap="leave">直接离开</button> -->
            <button class="to-pay-btn" bindtap="toCartOrder">试衣结算</button>
        </view>
    </view>
</view>
