.container{
    min-height: 100%;
    overflow: hidden;
}
.userinfo {
    display: flex;
    padding: 20rpx 50rpx;
    background: #e85654;
    width: 750rpx;
}

.userinfo-avatar {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-info {
    margin-left: 10rpx;
    text-align: center;
}

.userinfo-nickname {
    margin-top: 40rpx;
    color: #FFF;
    display: block;
}
.weui-btn {
    margin-top: 10rpx;
}

.version {
    width:100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    text-align: center;
    padding: 40rpx;
}

.my-item {
    width: 100%;
    background: url("data:image/png;base64,") no-repeat 90% center;
    background-size: 16rpx auto;
    border-bottom: 1px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 40rpx;
    position: relative;
}

.my-item .right-text {
    position: absolute;
    right: 14%;
    text-align: right;
    color: #888;
}
