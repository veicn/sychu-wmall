.container{
    min-height: 100%;
    overflow: hidden;
}
.userinfo {
    display: flex;
    padding: 30rpx 30rpx;
    background: #363636;
    width: 750rpx;
}

.userinfo-avatar {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-info {
    margin-left: 10rpx;
}

.userinfo-nickname {
    margin-top: 40rpx;
    color: #FFF;
    display: block;
    text-align:left;
    padding-left: 20rpx
}
.userinfo-info .weui-btn {
    border-radius: 30rpx;
}
.userinfo .scan-qrcode {
    width:48rpx;
    height:48rpx;
    float:right;
    right:48rpx;
    position:absolute;
    right:48rpx;
    top:48rpx;
}
.userinfo .scan-qrcode image {
    width:48rpx;
    height:48rpx;
}
.userinfo-ft {
    overflow:hidden;
    display:flex;
    background:#363636;
    width:750rpx;
    color:#fff;
    padding:20rpx 0;
}
.userinfo-ft .uf-item {
    float: left;
    width: 32%;
    text-align: center;
    border-right: 1rpx solid #FFFFFF;
}
.userinfo-ft .uf-item:last-child {
    border-right: none
}
.userinfo-ft .uf-item .uf-img {
    width: 60rpx;
    height: 60rpx;
}
.weui-btn {
    margin-top: 10rpx;
}

.version {
    width:100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    text-align: center;
    padding: 40rpx;
}

.my-item {
    width: 100%;
    background: url("data:image/png;base64,") no-repeat 90% center;
    background-size: 16rpx auto;
    border-bottom: 1px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 40rpx;
    position: relative;
}

.my-item .right-text {
    position: absolute;
    right: 14%;
    text-align: right;
    color: #888;
}
